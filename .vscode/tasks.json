{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.c", 
                "${workspaceFolder}/heredoc/*.c", 
                "${workspaceFolder}/syntax/*.c", 
                "${workspaceFolder}/token/*.c", 
                "${workspaceFolder}/tree/*.c", 
                "${workspaceFolder}/libft/*.c", 
                "-lreadline",
                "-I",
                "${workspaceFolder}/include",
                "-I",
                "${workspaceFolder}/libft/include",
                "-o",
                "${workspaceFolder}/a.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}